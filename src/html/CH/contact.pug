    .business
        +page_theme("CONTACT","聯絡我們","background-image:url('${require(`../../img/CH/desktop/shoplist/bg.jpg`)}')")

        +page_select([['銷售通路','/CH/shoplist.html',''],['業務冾詢','/CH/business.html',''],['客服信箱','/CH/contact.html','ON']],false)
