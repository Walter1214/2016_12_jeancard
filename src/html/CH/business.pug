block content-extend
    include ./include/common/page_theme.pug
    include ./include/common/page_select.pug
    include ./include/common/select.pug
    include ./include/master/makers_header.pug
    .business
        +page_theme("CONTACT","聯絡我們","background-image:url('${require(`../../img/CH/desktop/shoplist/bg.jpg`)}')")

        +page_select([['銷售通路','/CH/shoplist.html',''],['業務冾詢','/CH/business.html','ON'],['客服信箱','/CH/contact.html','']],false)
        +makers_header([['銷售通路','/CH/shoplist.html',''],['業務冾詢','/CH/business.html','ON'],['客服信箱','/CH/contact.html','']])
        .main_content
            .main_container.first_container
                .main_title_out
                    span.main_title 公司聯絡資訊
                .main_wrap
                    .direct_store_container
                        each val in [{name:"知音文創產業股份有限公司/台灣總公司",address:"231新北市新店區寶中路95之6號一樓",tel:"+886-2-29171700",fex:"+886-2-29186216",img:"~CH/desktop/business/building_0.jpg"},{name:"知音卡片禮品(深圳)有限公司/深圳知音廠",address:"深圳市寶安區觀瀾街道大水坑樟閣村桂月路451號(知音工業園)",tel:"+86-755-29832000",fex:"+86-755-29521012",img:"~CH/desktop/business/building_1.jpg"},{name:"金音卡片禮品(廈門)有限公司/廈門知音廠",address:"福建省廈門市集美北區英瑤路198號",tel:"+86-592-6680188",fex:"+86-592-6683088",img:"~CH/desktop/business/building_2.jpg"}]
                            .direct_store
                                img.store_img(src=val.img)
                                //- .store_img(style="background-image:url('${require(`../../img/CH/desktop/shoplist/show_2.jpg`)}')")
                                .store_name.business=val.name
                                .store_address.business=val.address
                                .store_info.business
                                    span.title.blue TEL
                                    .text=val.tel
                                .store_info.business
                                    span.title.blue FEX
                                    .text=val.fex
                .main_title_out
                    span.main_title 線上冾詢表單
                .main_wrap
                    .direct_store_container.space_between
                        .left_space.business
                            .text.desktop 如果您有任何業務合作需求
                            .text.desktop 歡迎與我們聯繫
                            .text.icon
                            .text.desktop 我們將安排專人盡快與您聯絡
                            .text.mobile 如果您有任何業務合作需求，歡迎與我們聯繫， 我們將安排專人盡快與您聯絡。
                        .right_space
                            +select([['請選擇洽詢事項'],['媒體通關洽談'],['紙膠帶客製化服務'],['其他商品客製化服務'],['其他']])
                            textarea(placeholder="請留言說明您想詢問的問題，我們將盡快與您聯絡。")
                            +select([['您的所在地'],['台灣'],['中港澳'],['其他']])
                            .gender
                                .input_gender
                                    input(type="text" placeholder="請留下您的大名")
                                .select_gender
                                    +select([['小姐'],['先生']])
                            input(type="text" placeholder="請留下您的聯絡電話 (非必填)")
                            .rule_text *請輸入行動電話或帶有區碼的市話，不須輸入標點符號
                            .rule_text 例0933123456，或0229171700
                            input(type="text" placeholder="請留下您的E-mail")
                            input(type="text" placeholder="您所屬的公司/單位/機構")
                            .vcode
                                img(src="", alt="")
                                input(type="text" placeholder="請輸入驗證碼")
                                a(href="javascript:;").update 更新驗證碼
                            //- .rule_text.red *以上欄位皆為必填

                            a(href="javascript:;").more_btn.brown.send_Info 送出
                                .more_hover()
                            
                    
    include ./include/common/service.pug
    +service("not_index")  
    include ./include/common/fixed_service.pug
