extends _master.pug
block head-append
    title 人才招募｜知音文創 Jean Cultural & Creative Co., Ltd.
    meta(property="og:title" content="人才招募｜知音文創 Jean Cultural & Creative Co., Ltd.")
    meta(name="description" content="知音文創以＂人＂為最初衷的本，將每一位員工當作是家人，打造自然放鬆的工作環境。")
    meta(property="og:description" content="知音文創以＂人＂為最初衷的本，將每一位員工當作是家人，打造自然放鬆的工作環境。")

    script(src="/asset/js/hiring.js" defer)
    link(rel="stylesheet", href="/asset/css/hiring.css")

block header
    include ./include/master/header.pug
    +header(['','ON','','','',''])

block content-extend
    include ./include/common/page_theme.pug
    include ./include/common/page_select.pug
    include ./include/common/select.pug
    include ./include/master/makers_header.pug
    .business
        +page_theme("ABOUT","關於知音","background-image:url('${require(`../../img/CH/desktop/buyers/bg.jpg`)}')")

        +page_select([['經營理念','/CH/about.html',''],['歷史沿革','/CH/history.html',''],['經典商品','/CH/classic.html',''],['人才招募','/CH/hiring.html','ON']],false)
        +makers_header([['經營理念','/CH/about.html',''],['歷史沿革','/CH/history.html',''],['經典商品','/CH/classic.html',''],['人才招募','/CH/hiring.html','ON']])
        .hiring_select_out
                .hiring_select
                    .switch_click.default_option 台灣
                    .switch_click.switchskin
                    .hiring_option_out
                        each val,index in [['台灣'],['深圳'],['廈門']]
                            p.hiring_option.option_click(data-value=index data-name=val[0])=val[0]
        .main_content     
            .main_container.first_container.hiring
                .hiring_container.blue
                    .hiring_title.title_click
                        h1 台灣職缺列表
                        .hiring_menu
                    .hiring_content
                        .main_icon 台灣                    
                        .hiring_space
                            .main_pillar.red 招募網站
                            a(href="https://www.104.com.tw/jb/104i/cust/view?c=623a43295a363e2240683a1d1d1d1d5f2443a363189j50" target="_blank").hiring_link 104人力銀行
                            .main_pillar.wrap.red 員工福利措施
                            .hiring_record
                                .note 薪酬      
                                span.text.width_50 12個月具競爭力的基本月薪
                                span.text.width_50 依業績及個人表現提供績效獎金、業績獎金及工作獎金
                            .hiring_record
                                .note 保險      
                                span.text.width_50 全體員工參加勞工保險、全民健康保險
                                span.text.width_50 規劃雇主補償責任險
                            .hiring_record
                                .note 福委會      
                                span.text.width_50 年終獎金、三節獎金
                                span.text.width_50 結婚禮金、生育、喪葬補助
                                span.text.width_50 生日禮金及年終尾牙摸彩活動
                                span.text.width_50 員工健康檢查福利金
                                span.text.width_50 國內、外旅遊補助金
                                span.text.width_50 職工進修休福利金
                            .hiring_record
                                .note 工作環境      
                                span.text.width_50 員工停車位，風吹日曬也不擔心找車位
                                span.text.width_50 長駐外派人員乘坐商務艙       
                                span.text.width_50 派駐廠區主管均安排主管別墅及專任管家，照顧生活起居
                                span.text.width_50 設置森林木屋員工餐廳，上班日免費供應健康均衡的早餐/午餐
                                span.text.width_50 總公司及廠區皆有溫室、花園、人工景觀湖等多元休閒設施
                            .hiring_record
                                .note 工作環境      
                                span.text.width_50 哺集乳室、提供托育措施達職家平衡
                                span.text.width_50 多元的特約商店
                                span.text.width_50 人性化的教育訓練
                                span.text.width_50 順暢透明的升遷管道
                                span.text.width_50 員工購物優惠
                            .hiring_record
                                .note 工作環境      
                                span.text.width_50 依照勞動基準法及勞工退休金條例辦理提撥作業
                .hiring_container.green
                    .hiring_title.title_click
                        h1 深圳職缺列表
                        .hiring_menu
                    .hiring_content
                        .main_icon 深圳                  
                        .hiring_space
                            .main_pillar.red 招募網站
                            a(href="http://ehire.51job.com/MainLogin.aspx" target="_blank").hiring_link 前程無憂招聘
                            a(href="http://www.szsh.com/" target="_blank").hiring_link 三和招聘
                            .main_pillar.wrap.red 員工福利措施
                            .hiring_record
                                .note 工作時間      
                                span.text.empty_point 每週五天八小時制
                            .hiring_record
                                .note 工資結構      
                                span.text.empty_point 基本工資+崗位工資+專業津貼+加班工資+月全勤獎金+其他補貼
                            .hiring_record
                                .note 法定假和公休日      
                                span.text.empty_point 員工每年可享有法定節假日11天 (另有婚假、產假、病假、喪假、病假等及相應補助金）
                            .hiring_record
                                .note 社會保險      
                                span.text.empty_point 公司提供辦理各種社會保險，如養老保險、工傷保險、醫療保險、 生育保險，失業保險
                            .hiring_record
                                .note 內部招聘(晉升)    
                                span.text.empty_point 公司為工作進步顯著、富有上進心的員工提供升職的機會。在出現職位空缺時，會張貼內部招聘通告。符合要求並且對招聘職位感興趣的員工，均可報名參加內聘，內部發展空間大。
                            .hiring_record
                                .note 員工福利及活動 
                                span.text.empty_point 每年公司會定期組織旅遊、趣味運動會、年終晚會、員工就餐補助，年度健康體檢…等。
                            .hiring_record
                                .note 公司設立娛樂設施 
                                span.text.empty_point 公司擁有異地風情的園林景觀，配置人性化的休閒、娛樂、體育休閒設施，包括燈光籃球場、桌球室、專業羽毛球場地…等，構成別具風格的休憩天地。                                                                                                                                                                                           
                .hiring_container.yellow
                    .hiring_title.title_click
                        h1 廈門職缺列表
                        .hiring_menu
                    .hiring_content
                        .main_icon 廈門                    
                        .hiring_space
                            .main_pillar.red 招募網站
                            a(href="http://www.xmrc.com.cn/" target="_blank").hiring_link 廈門人才網
                            .main_pillar.wrap.red 員工福利措施
                            .hiring_record
                                .note 工作時間      
                                span.text.empty_point 每週五天八小時制，超過正常工作時間以加班計算
                            .hiring_record
                                .note 法定假日      
                                span.text.empty_point 員工每年可享受法定節假日十一天
                            .hiring_record
                                .note 婚假      
                                span.text.empty_point 可享受3天有薪婚假及領取200元福利補助金
                            .hiring_record
                                .note 產假      
                                span.text.empty_point 可享受98天產假及領取200元福利補助金
                            .hiring_record
                                .note 喪假      
                                span.text.empty_point 可享受3天有薪喪假及領取200元福利補助金                                        
                            .hiring_record
                                .note 生日禮金      
                                span.text.empty_point 員工生日可領取50元生日禮金
                            .hiring_record
                                .note 社會保險      
                                span.text.empty_point 公司提供辦理各種社會保險，如養老保險、醫療保險、工傷保險、失業保險、生育保險等
                            .hiring_record
                                .note 有薪年假      
                                span.text.empty_point 員工到職一年，每年可享受五天有薪年假；工作滿五年不滿十年者，每年可享受七天有薪年假；工作十年以上者，每年可享受十天有薪年假
                            .hiring_record
                                .note 其他福利      
                                span.text.empty_point 可享受年度旅遊，享受輕鬆愜意的工作環境等
                            .hiring_record
                                .note 工作結構      
                                span.text.empty_point 基本工資+崗位工資+專業津貼+生活津貼+加班工資（平時加班1.5倍，週末加班2倍，節假日加班3倍）+月全勤獎金30元+年全勤獎金300元+年資+其他補貼
                            .hiring_record
                                .note 內部招聘      
                                span.text.empty_point 公司為工作進步顯著，富有上進心的員工提供升職機會。出現職位空缺時，會張貼內部招聘通知，符合要求並對招聘崗位感興趣的員工均可報名，公司提供內聘發展平臺！
                                                                                                                                                                                                                                                                                        

    include ./include/common/service.pug
    +service("not_index")  
    include ./include/common/fixed_service.pug
