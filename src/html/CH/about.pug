extends _master.pug
block head-append
    title 經營理念｜知音文創 Jean Cultural & Creative Co., Ltd.
    meta(property="og:title" content="經營理念｜知音文創 Jean Cultural & Creative Co., Ltd.")
    meta(name="description" content="堅持著以＂以人為本＂ ＂傳遞感動＂的理念，追求高品質的商品，並致力研發生產設備，只為提供更優良的商品品質。")
    meta(property="og:description" content="堅持著以＂以人為本＂ ＂傳遞感動＂的理念，追求高品質的商品，並致力研發生產設備，只為提供更優良的商品品質。")

    link(rel='stylesheet' href="/asset/lib/swiper/swiper.min.css")
    script(src="/asset/lib/swiper/swiper.min.js" defer)
    script(src="/asset/js/about.js" defer)
